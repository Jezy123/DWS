{% extends 'base.html.twig' %}
{% block title %}New Post{% endblock %}
{% block body %}
<!-- Principal Content Start -->
   <div id="new Post">
   	  <div class="container">
	    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
   	    <div class="form-group">
			<div class="col-xs-6">
				{{ form_row(form.title, {'attr': {'class':'form-control'}}) }}
			</div>
			<div class="col-xs-6">
				{{ form_row(form.content, {'attr': {'class':'form-control'}}) }}
			</div>
		</div>
		<div class="form-group">
			<div class="col-xs-12">
				{{ form_row(form.image, {'attr': {'class':'form-control'}}) }}
			</div>
		</div>

		<div class="form-group">
			<div class="col-xs-12">
				
				{{ form_row(form.Send, {'attr': {'class':'pull-right btn btn-lg sr-button'}}) }}
			</div>
		</div>
   	  </div>
   </div>
   {{ form_end(form)}}
<!-- Principal Content Start -->
{% endblock %}
